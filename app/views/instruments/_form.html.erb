<%= form_with(model: instrument) do |form| %>
  <% if instrument.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(instrument.errors.count, "error") %> prohibited this instrument from being saved:</h2>

      <ul>
        <% instrument.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class='container'>
   <div>
    <%= form.label :title, style: "display: block", class:"title" %>
    <%= form.text_field :title,class:"text" %>
  </div>

   <div>
    <%= form.label :price, style: "display: block", class:"price" %>
    <%= form.text_field :price,class:"text" %>
  </div>

   <div>
    <%= form.label :model, style: "display: block", class:"model" %>
    <%= form.text_field :model,class:"text" %>
  </div>

   <div>
    <%= form.label :description, style: "display: block", class:"description" %>
    <%= form.text_area :description,class:"text" %>
  </div>

<%= form.label :brand, "Brand", class: "brand" %><br />
<%= form.select :brand, options_for_select([ ["None", 1], ["Brand 1", 1], ["Brand 2", 2], ["Brand 3", 3], ["Brand 4", 4], ["Brand 5", 5]]),  id: "brand-dropdown" %>

  <div>
    <%= form.label :condition, style: "display: block", class:"condition" %>
    <%= form.text_field :condition,class:"text" %>
  </div>

  <div>
  <%=  form.file_field :image, class:'choose-image-button' %>
  <div>

    <%= form.submit %>
  </div>
<% end %>
</div>

<%= stylesheet_link_tag 'instrumant_form' %>
<%= javascript_include_tag 'instrument_form' %>